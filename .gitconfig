# see ~/usr/bin/git.initialization
# since this file is in .gitignore, link it to the platform specific file
#   win: ln -s .gitconfig_pc  .gitconfig
#   mac: ln -s .gitconfig_mac .gitconfig

[credential]
	helper = !aws codecommit credential-helper $@
	UseHttpPath = true
[user]
	name = Glenn Sisson
	email = glennaws@amazon.com
	#email = glenn.sisson@gmail.com
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	log0  = log --graph --decorate --oneline --abbrev-commit --all
	log1  = log --graph --date=short --pretty=format:'%C(auto)%h %ad | %d%s [%an]'
	logg = log --graph --abbrev-commit --decorate --format=format:'%C(cyan)%h%C(reset) - %C(green)(%ar)%C(reset) %C(bold white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

	undo-commit = reset --soft HEAD^
	conflicts = diff --name-only --diff-filter=U
[core]
	excludesfile = ~/.gitignore-global
	mergeoptions = --no-edit
	autocrlf = input
        pager = less -MRi-+F-+X # -+F: never quit-if-one-screen
       #pager = less -MRi-F-+X  #  -F:       quit-if-one-screen # best for work
[hub]
	protocol = ssh
[push]
       #default = simple   # doesn't auto track remote branches
	default = current  # does auto track
[merge]
	summary = true
	tool = bc3
[color] #
# colors: normal, black, red, green, yellow, blue, magenta, cyan, or white
# other: ul (underline), bold
	ui = true
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[color "diff"]
	plain = normal
	meta = blue white bold reverse
	frag = cyan
	old = red bold
	new = green bold
	commit = yellow
	whitespace = normal red
[color "branch"]
	current = green bold
	local = normal
	remote = red bold
	plain = normal
[color "status"]
	header = normal
	added = red bold
	updated = green bold
	changed = red bold
	untracked = cyan bold
	nobranch = red bold
[color "grep"]
	match = normal
[color "interactive"]
	prompt = normal
	header = normal
	help = normal
	error = normal
#[http]
#	proxy = http://web-proxy:8088
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[diff]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
[pull]
	rebase = false
[http]
	sslVerify = false
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/glennaws/.stCommitMsg
